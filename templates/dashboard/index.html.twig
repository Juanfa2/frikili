{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Dashboard
{% endblock %}

{% block body %}
    {{ parent() }}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>




    <div class="container">
        <div class="row">
            <div class="col-md-8 cursor">
                {% for post in posts %}
                <div class="bg-white rounded p-3 my-3"  onclick="window.location.href='{{ asset('/post/'~post.id) }}'">
                    <div class="d-flex bd-highlight">
                        <div class="p-2 flex-grow-1 bd-highlight">
                            <h3>{{ post.titulo }}</h3>
                            <div class="my-3 bg-yellow"> <i class="fa fa-user"></i><strong> Creado por {{ post.nombre }}</strong></div>
                            <div class=" bg-green"><i class="far fa-clock"></i> <strong>Fecha de publicaci√≥n: {{ post.fecha_publicacion|date }}</strong></div>
                        </div>
                        <div class="p-2 bd-highlight">
                            <div class="align-self-center">
                                <img class="rounded" src="{{ asset('uploads/photos/'~post.foto) }}" width="150px">
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="col-md-4">
                <div class="bg-white rounded p-3 my-3">
                    <h4>Comentarios</h4>
                </div>
            </div>
        </div>
    </div>





{% endblock %}
